{% extends 'base.html.twig' %}

{% block title %}Prognozy{% endblock %}

{% block body %}

    <h1>Prognozy</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temperatura</th>
                <td>{{ forecast.temperature }}</td>
            </tr>
            <tr>
                <th>Kierunek wiatru</th>
                <td>{{ forecast.windDirection }}</td>
            </tr>
            <tr>
                <th>Prędkość wiatru</th>
                <td>{{ forecast.windSpeed }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forecast_index') }}" class = "btn btn-light">Powrót</a>

    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}"  class = "btn btn-light">Edytuj</a>

    {{ include('forecast/_delete_form.html.twig') }}
{% endblock %}
